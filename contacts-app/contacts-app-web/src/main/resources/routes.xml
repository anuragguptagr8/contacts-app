<?xml version="1.0" encoding="UTF-8"?>
<routing-info>
	<controller-package>
		com.itechart.training.tsvilik.contactsapp.web.controllers
	</controller-package>
	<routes>
		<route>
			<path>/contact/attachment</path>
			<controller>Attachment</controller>
			<action>get</action>
		</route>
		<route>
			<path>/contacts/search</path>
			<controller>Search</controller>
			<action>search</action>
		</route>
		<route>
			<path>/contacts</path>
			<controller>Contact</controller>
			<action>list</action>
		</route>
		<route>
			<path>/contact/add</path>
			<controller>Contact</controller>
			<action>add</action>
		</route>
		<route>
			<path>/contact/save</path>
			<controller>Contact</controller>
			<action>save</action>
		</route>
		<route>
			<path>/contact/remove</path>
			<controller>Contact</controller>
			<action>remove</action>
		</route>
		<route>
			<path>/contact</path>
			<controller>Contact</controller>
			<action>get</action>
		</route>
		<route>
			<path>/</path>
			<controller>Contact</controller>
			<action>list</action>
		</route>

	</routes>
</routing-info>